<form action="/inventory/edit/<%= inventory.id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= inventory.inventory_name %>" required>

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="<%= inventory.quantity %>" required>

    <label for="brand">Brand:</label>
    <select name="brand" id="brand">
        <% brands.forEach(brand => { %>
            <option value="<%= brand.id %>" <%= brand.id === inventory.brand_id ? 'selected' : '' %>><%= brand.name %></option>
        <% }); %>
    </select>

    <label for="category">Category:</label>
    <select name="category" id="category">
        <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= category.id === inventory.category_id ? 'selected' : '' %>><%= category.name %></option>
        <% }); %>
    </select>

    <button type="submit">Update Inventory</button>
</form>