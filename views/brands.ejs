<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brands</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Brands</h1>
    <a href="/brands/new">Add New Brand</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% brands.forEach(brand => { %>
                <tr>
                    <td><%= brand.id %></td>
                    <td><%= brand.name %></td>
                    <td>
                        <a href="/brands/edit/<%= brand.id %>">Edit</a> |
                        <a href="/brands/delete/<%= brand.id %>">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
